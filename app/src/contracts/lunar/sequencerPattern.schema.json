{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lunar.studio/schema/sequencerPattern.json",
  "title": "LunarSequencerPattern",
  "description": "Step sequencer pattern definition for Lunar Studios.",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "stepsPerBar", "bars", "lanes"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this pattern."
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 64,
      "description": "Human-friendly name (e.g. 'Basic Trap 808')."
    },
    "stepsPerBar": {
      "type": "integer",
      "minimum": 4,
      "maximum": 64,
      "default": 16,
      "description": "Resolution per bar. 16 = 16th notes."
    },
    "bars": {
      "type": "integer",
      "minimum": 1,
      "maximum": 8,
      "default": 1,
      "description": "Number of bars looped by the pattern."
    },
    "lanes": {
      "type": "array",
      "minItems": 1,
      "description": "Per-lane step data (kick, snare, hat, etc.).",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "label", "trackId", "steps"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Stable lane ID, often derived from track or instrument."
          },
          "label": {
            "type": "string",
            "minLength": 1,
            "maxLength": 32,
            "description": "Short label e.g. 'Kick', 'Snare', 'Hat', 'Lead'."
          },
          "trackId": {
            "type": "string",
            "description": "The Track.id this lane is logically tied to."
          },
          "color": {
            "type": "string",
            "pattern": "^#(?:[0-9a-fA-F]{6}|[0-9a-fA-F]{3})$",
            "description": "Lane color in the UI (optional; defaults to track color)."
          },
          "steps": {
            "type": "array",
            "minItems": 1,
            "description": "Boolean steps for this lane. Length should be stepsPerBar * bars.",
            "items": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
